@model HRManagement.Models.DashboardKpiViewModel

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">HR Dashboard KPIs</h1>
            <p class="text-muted">Real-time employee and payroll metrics</p>
        </div>
    </div>

    <!-- KPI Cards Row 1 -->
    <div class="row g-4">
        <!-- Total Employees Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #007bff;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Total Employees</p>
                            <h2 class="card-title mb-0">@Model.TotalEmployees</h2>
                        </div>
                        <div style="font-size: 2rem; color: #007bff; opacity: 0.2;">
                            <i class="bi bi-people-fill"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">All registered employees</small>
                </div>
            </div>
        </div>

        <!-- Active Employees Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #28a745;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Active Employees</p>
                            <h2 class="card-title mb-0">@Model.ActiveEmployees</h2>
                        </div>
                        <div style="font-size: 2rem; color: #28a745; opacity: 0.2;">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">Currently working</small>
                </div>
            </div>
        </div>

        <!-- Inactive Employees Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #dc3545;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Inactive Employees</p>
                            <h2 class="card-title mb-0">@Model.InactiveEmployees</h2>
                        </div>
                        <div style="font-size: 2rem; color: #dc3545; opacity: 0.2;">
                            <i class="bi bi-x-circle-fill"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">Not active</small>
                </div>
            </div>
        </div>

        <!-- Departments Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #ffc107;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Departments</p>
                            <h2 class="card-title mb-0">@Model.DepartmentsCount</h2>
                        </div>
                        <div style="font-size: 2rem; color: #ffc107; opacity: 0.2;">
                            <i class="bi bi-building"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">Total departments</small>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards Row 2 -->
    <div class="row g-4 mt-2">
        <!-- Total Payroll Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #17a2b8;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Total Payroll</p>
                            <h2 class="card-title mb-0">@Model.TotalPayroll.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</h2>
                        </div>
                        <div style="font-size: 2rem; color: #17a2b8; opacity: 0.2;">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">Monthly total</small>
                </div>
            </div>
        </div>

        <!-- Average Salary Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100" style="border-top: 4px solid #6f42c1;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="card-text text-muted mb-2">Average Salary</p>
                            <h2 class="card-title mb-0">@Model.AverageSalary.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</h2>
                        </div>
                        <div style="font-size: 2rem; color: #6f42c1; opacity: 0.2;">
                            <i class="bi bi-graph-up"></i>
                        </div>
                    </div>
                    <small class="text-muted d-block mt-3">Per employee</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }

    .card-title {
        color: #333;
        font-weight: 700;
    }

    .bi {
        display: inline-block;
    }
</style>
